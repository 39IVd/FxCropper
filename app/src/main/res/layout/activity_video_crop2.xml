<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".VideoCropActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:scaleType="fitCenter"
            android:layout_marginTop="4dp"></ImageButton>
        <TextView
            android:id="@+id/text_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif"
            android:textColor="#def3f3f3"
            android:textSize="16dp"
            android:textStyle="normal"
            android:text="Frozen2.2019.720p.900..." />
        <ImageButton
            android:id="@+id/btn_video_infobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_info"
            android:layout_gravity="center"
            android:layout_alignParentRight="true">
        </ImageButton>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_video"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
<!--        <VideoView-->
<!--            android:id="@+id/videoView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:scaleType="center"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            />-->
        <com.fx.fxcropper.cropview.CropVideoView
            android:id="@+id/cropVideoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_gravity="center_vertical"
            />


    </FrameLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/ic_rewind"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_white_rewind"
            android:onClick="onClick" />

        <ImageButton
            android:id="@+id/ic_play"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_white_play"
            android:onClick="onClick" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/black_preset">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:text="프리셋 선택"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="70dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/preset_default"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="16dp"
                    android:onClick="onClick"
                    android:background="@drawable/shape_rectangle_presets_selected">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_check"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="10dp"
                        android:text="기본"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_insta_1_1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="onClick"
                    android:background="@drawable/shape_rectangle_presets_unselected">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_instagram"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="10dp"
                        android:text="1:1"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_insta_4_5"
                    android:layout_width="45dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="onClick"
                    android:background="@drawable/shape_rectangle_presets_unselected">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_instagram"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="10dp"
                        android:text="4:5"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_youtube_16_9"
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="onClick"
                    android:background="@drawable/shape_rectangle_presets_unselected">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_youtube"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="3dp"
                        android:text="16:9"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_youtube_9_16"
                    android:layout_width="30dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="onClick"
                    android:background="@drawable/shape_rectangle_presets_unselected">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_youtube"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="10dp"
                        android:text="9:16"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_tiktok_16_9"
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="onClick"
                    android:background="@drawable/shape_rectangle_presets_unselected"
                    android:layout_marginRight="16dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="3dp"
                        android:text="16:9"
                        />
                </RelativeLayout>


            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#deebebeb"
        android:lineSpacingExtra="1sp"
        android:background="@color/dark_grey_two"
        android:text="Next">
    </Button>


</LinearLayout>