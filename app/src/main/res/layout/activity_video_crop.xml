<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".VideoCropActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:scaleType="fitCenter"
            android:layout_marginTop="4dp"></ImageButton>
        <TextView
            android:id="@+id/text_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="sans-serif"
            android:textColor="#def3f3f3"
            android:textSize="16dp"
            android:textStyle="normal"  />
        <ImageButton
            android:id="@+id/btn_video_infobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_info"
            android:layout_gravity="center"
            android:layout_alignParentRight="true">
        </ImageButton>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_video"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <com.fx.fxcropper.cropview.CropVideoView
            android:id="@+id/cropVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_gravity="center"
            />


    </FrameLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/layout_rewind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            >
            <ImageView
                android:id="@+id/ic_rewind"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:background="@drawable/ic_white_rewind"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            >
            <ImageView
                android:id="@+id/ic_play"
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_white_play"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/black_preset">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:text="@string/text_select_preset"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="70dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/preset_1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    style="@style/Preset_layout_style">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_check"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="10dp"
                        android:text="@string/preset_default"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    style="@style/Preset_layout_style">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_instagram"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="10dp"
                        android:text="@string/preset_1_1"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_3"
                    android:layout_width="45dp"
                    android:layout_height="56dp"
                    style="@style/Preset_layout_style">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_instagram"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="10dp"
                        android:text="@string/preset_4_5"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_4"
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    style="@style/Preset_layout_style">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_youtube"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="3dp"
                        android:text="@string/preset_16_9"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_5"
                    android:layout_width="30dp"
                    android:layout_height="56dp"
                    style="@style/Preset_layout_style">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_youtube"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="10dp"
                        android:text="@string/preset_9_16"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preset_6"
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    style="@style/Preset_layout_style"
                    android:layout_marginRight="16dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        style="@style/Preset_text_style"
                        android:layout_marginBottom="3dp"
                        android:text="@string/preset_16_9"
                        />
                </RelativeLayout>


            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#deebebeb"
        android:lineSpacingExtra="1sp"
        android:background="@color/dark_grey_two"
        android:text="@string/btn_crop_next">
    </Button>


</LinearLayout>